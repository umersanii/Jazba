<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="1300.0" style="-fx-background-color: #1e2a3a;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.RegistrationController">
   <children>
      <!-- Main container: VBox to center everything vertically and horizontally -->
      <VBox alignment="CENTER" spacing="20.0" layoutX="0.0" layoutY="0.0" prefWidth="1300.0" prefHeight="700.0">
         <!-- Title -->
         <Label text="Register" textFill="white" alignment="CENTER">
            <font>
               <Font size="40.0" />
            </font>
         </Label>

         <!-- Username -->
         <HBox spacing="10.0">
            <Label text="Username" textFill="white" />
            <TextField fx:id="usernameField" prefWidth="300.0" style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-prompt-text-fill: #BDC3C7; -fx-background-radius: 20px;" />
         </HBox>

         <!-- Email -->
         <HBox spacing="10.0">
            <Label text="Email" textFill="white" />
            <TextField fx:id="emailField" prefWidth="300.0" style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-prompt-text-fill: #BDC3C7; -fx-background-radius: 20px;" />
         </HBox>

         <!-- Password -->
         <HBox spacing="10.0">
            <Label text="Password" textFill="white" />
            <TextField fx:id="passwordField" prefWidth="300.0" style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-prompt-text-fill: #BDC3C7; -fx-background-radius: 20px;" />
         </HBox>

         <!-- Profile Section Title -->
         <Label text="Profile Details" textFill="white" alignment="CENTER">
            <font>
               <Font size="18.0" />
            </font>
         </Label>

         <!-- Height -->
         <HBox spacing="10.0">
            <Label text="Height (cm)" textFill="white" />
            <TextField fx:id="heightField" prefWidth="300.0" style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-prompt-text-fill: #BDC3C7; -fx-background-radius: 20px;" />
         </HBox>

         <!-- Weight -->
         <HBox spacing="10.0">
            <Label text="Weight (kg)" textFill="white" />
            <TextField fx:id="weightField" prefWidth="300.0" style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-prompt-text-fill: #BDC3C7; -fx-background-radius: 20px;" />
         </HBox>

         <!-- Age -->
         <HBox spacing="10.0">
            <Label text="Age" textFill="white" />
            <TextField fx:id="ageField" prefWidth="300.0" style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-prompt-text-fill: #BDC3C7; -fx-background-radius: 20px;" />
         </HBox>

         <!-- Fitness Level -->
         <HBox spacing="10.0">
            <Label text="Fitness Level" textFill="white" />
            <TextField fx:id="fitnessLevelField" prefWidth="300.0" style="-fx-background-color: #34495E; -fx-text-fill: white; -fx-prompt-text-fill: #BDC3C7; -fx-background-radius: 20px;" />
         </HBox>

         <!-- Buttons -->
         <HBox spacing="20.0">
            <Button fx:id="submitButton" text="Register" prefWidth="200.0" style="-fx-background-color: #1ABC9C; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 30px; -fx-padding: 10 20 10 20; -fx-font-weight: bold;" />
            <Button fx:id="backButton" text="Back" prefWidth="200.0" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 30px; -fx-padding: 10 20 10 20; -fx-font-weight: bold;" />
         </HBox>
      </VBox>
   </children>
</AnchorPane>
