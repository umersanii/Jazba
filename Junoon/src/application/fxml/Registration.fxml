<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="1300.0" styleClass="background" stylesheets="@/resources/application.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.RegistrationController">
   <children>
      <!-- Main container: VBox to center everything vertically and horizontally -->
      <VBox alignment="CENTER" spacing="20.0" layoutX="0.0" layoutY="0.0" prefWidth="1300.0" prefHeight="700.0">
         <!-- Title -->
         <Label text="Register" textFill="white" alignment="CENTER" styleClass="title-label" />

         <!-- Username -->
         <HBox spacing="10.0">
            <Label text="Username" textFill="white" />
            <TextField fx:id="usernameField" prefWidth="300.0" styleClass="input-field" />
         </HBox>

         <!-- Email -->
         <HBox spacing="10.0">
            <Label text="Email" textFill="white" />
            <TextField fx:id="emailField" prefWidth="300.0" styleClass="input-field" />
         </HBox>

         <!-- Password -->
         <HBox spacing="10.0">
            <Label text="Password" textFill="white" />
            <TextField fx:id="passwordField" prefWidth="300.0" styleClass="input-field" />
         </HBox>

         <!-- Profile Section Title -->
         <Label text="Profile Details" textFill="white" alignment="CENTER" styleClass="profile-title" />

         <!-- Height -->
         <HBox spacing="10.0">
            <Label text="Height (cm)" textFill="white" />
            <TextField fx:id="heightField" prefWidth="300.0" styleClass="input-field" />
         </HBox>

         <!-- Weight -->
         <HBox spacing="10.0">
            <Label text="Weight (kg)" textFill="white" />
            <TextField fx:id="weightField" prefWidth="300.0" styleClass="input-field" />
         </HBox>

         <!-- Age -->
         <HBox spacing="10.0">
            <Label text="Age" textFill="white" />
            <TextField fx:id="ageField" prefWidth="300.0" styleClass="input-field" />
         </HBox>

         <!-- Fitness Level -->
         <HBox spacing="10.0">
            <Label text="Fitness Level" textFill="white" />
            <TextField fx:id="fitnessLevelField" prefWidth="300.0" styleClass="input-field" />
         </HBox>

         <!-- Buttons -->
         <HBox spacing="20.0">
            <Button fx:id="submitButton" text="Register" prefWidth="200.0" styleClass="submit-button" />
            <Button fx:id="backButton" text="Back" prefWidth="200.0" styleClass="back-button" />
         </HBox>
      </VBox>
   </children>
</AnchorPane>
