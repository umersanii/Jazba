<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="394.0" prefWidth="459.0" style="-fx-background-color: #212121;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jazba.controller.admin.ProfilePopupController">
    <children>
        <VBox alignment="CENTER" layoutX="80.0" layoutY="49.0" prefHeight="306.0" prefWidth="300.0" spacing="15" style="-fx-background-color: black; -fx-background-radius: 15;">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            
            <!-- Title -->
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="Profile Details" />
            
            <!-- Profile Details Section -->
            <Label fx:id="profileDetailsLabel" style="-fx-font-size: 14px; -fx-text-fill: white;" wrapText="true" />
            
            <!-- Close Button -->
            <Button onAction="#closePopup" style="-fx-background-color: linear-gradient(to right, #6a11cb, #2575fc); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 10;" text="Close" />
        </VBox>
    </children>
</AnchorPane>
